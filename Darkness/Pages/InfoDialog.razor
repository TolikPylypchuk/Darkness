<MudDialog>
    <DialogContent>
        <MudText Class="mb-2">
            The start tile is pink and on the left side, and the finish tile is purple and on the right side.
        </MudText>

        <MudText>
            Use the keyboard arrow keys to move and turn, or click/tap on the buttons below the maze.
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="this.Close">OK</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; } = null!;

    private void Close() =>
        this.MudDialog.Close(DialogResult.Ok(true));
}
